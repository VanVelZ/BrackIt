@model IEnumerable<BunchofBrackets.BL.Bracket>

@{
    ViewBag.Title = "Index";
}

<center style="margin-top:50px; margin-bottom:15px;"><img src="~/images/Browse.png" /></center>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Game)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentDivision)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Game)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentDivision)
        </td>
    </tr>
}

</table>
