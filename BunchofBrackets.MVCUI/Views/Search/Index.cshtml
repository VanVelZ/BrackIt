@model BunchofBrackets.MVCUI.ViewModels.SearchResults

@{
    ViewBag.Title = "Search";
}

<center style="margin-top:50px; margin-bottom:15px;"><img src="~/images/Search.png" /></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Users)
    @Html.HiddenFor(model => model.Brackets)
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <center>
            <div class="form-group">
                <!--@Html.LabelFor(model => model.SearchTerm, htmlAttributes: new { @class = "control-label col-md-12" })-->
                <div class="col-md-12">
                    @Html.EditorFor(model => model.SearchTerm, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 40px;" } })
                    @Html.ValidationMessageFor(model => model.SearchTerm, "", new { @class = "text-danger" })
                </div>
            </div>
        </center>

        <center>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Search" class="btn btn-default" style="border-radius:40px; background-color: transparent; border-color: #6591ae; width: 100px; color: #6591ae;"/>
                </div>
            </div>
        </center>
    </div>
}
<center>
    <div class="col-md-12">
        @{ Html.RenderAction("Results", new { searchterm = Model.SearchTerm }); }
    </div>
</center>
