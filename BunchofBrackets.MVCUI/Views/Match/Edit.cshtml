@model BunchofBrackets.MVCUI.ViewModels.MatchBracket

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MatchId, Model.MatchId)
    @Html.HiddenFor(m => m.BracketId, Model.BracketId)
    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />


        <div class="form-group">
            @Html.LabelFor(model => model.WinnerId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.WinnerId, new SelectList(Model.Participants, "Id", "FullName", Model.WinnerId), null, new { @class = "form-control", size = 2 })
                @Html.ValidationMessageFor(model => model.WinnerId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
